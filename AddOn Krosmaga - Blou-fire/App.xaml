                </ResourceDictionary>


            </ResourceDictionary.MergedDictionaries>
            <uiElements:GodClassToColor x:Key="GodToColor" />

        
            <!--Converter-->
            <converter:SelectedToVisibilityConverter x:Key="SelectedToVisibilityConverter" />
            <Style x:Key="CenterHeaderColumStyle" 
                   BasedOn="{StaticResource MetroDataGridColumnHeader}" 
                   TargetType="{x:Type DataGridColumnHeader}">
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
            </Style>
            <!--Style-->    
            <Style x:Key="GridFadeAnimationStyle" TargetType="Grid">
                <Style.Triggers>
                    <Trigger Property="Visibility" Value="Visible">
                        <Trigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                        <Trigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.ExitActions>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!--UserControlOverlay-->
           
            <LinearGradientBrush
                x:Key="HeaderBackgroundOpacityMask"
                StartPoint="0,0"
                EndPoint="1,0">
                <GradientStop Color="#FFFFFFFF" Offset="0" />
                <GradientStop Color="#FFFFFFFF" Offset="0.05" />
                <GradientStop Color="#FFFFFFFF" Offset="1" />
            </LinearGradientBrush>
            
            <!--Button-->
              <Style x:Key="ColumnHeaderDefaultStyle" TargetType="DataGridColumnHeader" >
                <Setter Property="Background" Value="Transparent"></Setter>
                
                </Style>
            <Thickness x:Key="DefaultLargeMargin"  >7</Thickness>
            <Thickness x:Key="DefaultMargin"  >5</Thickness>
            <Thickness x:Key="DefaultMinMargin"  >3</Thickness>
            <system:Double x:Key="AnimatedTabControlHeaderMediumSize">20</system:Double>
            <system:Double x:Key="OverlayWidth" >350</system:Double>
            <system:Double x:Key="IconDefaultSize">20</system:Double>

     
            <Style TargetType="TextBlock" x:Key="WinrateGaugeTextStyle">
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Width" Value="80"/>
            </Style>
            <Style TargetType="wpf:Gauge" x:Key="WinrateGaugeStyle">
                <Setter Property="Width" Value="90"/>
                <Setter Property="Height" Value="90"/>
                <Setter Property="From" Value="0"/>
                <Setter Property="To" Value="100"/>
                <Setter Property="InnerRadius" Value="40"/>
                <Setter Property="Uses360Mode" Value="True"/>
                  <Setter Property="LabelFormatter" Value="{Binding EmptyFormatter}"/>
                <Setter Property="GaugeActiveFill" Value="{DynamicResource AccentColorBrush}"/>
                <Setter Property="GaugeBackground" Value="{DynamicResource AccentColorBrush4}"/>
                <Setter Property="GaugeRenderTransform">
                    <Setter.Value>
                        <RotateTransform Angle="90"/>
                    </Setter.Value>
                </Setter>
            </Style>
            <converter:BoolToVisibiltyConverter x:Key="BoolToVis" />
            <converter:BoolAndNegatToVisibiltyConverter x:Key="BoolAndNegatToVisibiltyConverter" />
            <Brush x:Key="SideMenuColorBrush" >#005666</Brush>
            <Brush x:Key="SideMenuButtonBackground">#005666</Brush>
            <LinearGradientBrush x:Key="FlyoutGradientBackground" StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#005666" Offset="0" />
                <GradientStop Color="{StaticResource WhiteColor}" Offset="0.05" />
                <GradientStop Color="{StaticResource WhiteColor}" Offset="1" />
            </LinearGradientBrush>
        </ResourceDictionary>
    </Application.Resources>
</Application>