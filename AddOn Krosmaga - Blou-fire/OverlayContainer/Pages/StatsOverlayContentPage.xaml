<UserControl x:Class="AddOn_Krosmaga___Blou_fire.OverlayContainer.Pages.StatsOverlayContentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddOn_Krosmaga___Blou_fire.OverlayContainer.Pages"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:tracker="clr-namespace:AddOn_Krosmaga___Blou_fire.FlyoutControls.Tracker"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <system:Double x:Key="ClassImageSize">20</system:Double>
    </UserControl.Resources>
    <StackPanel  OpacityMask="{StaticResource HeaderBackgroundOpacityMask}"
                 Background="{StaticResource FlyoutGradientBackground}">
        <GroupBox Header="Pick a class">
            <tracker:PickAClassControlPage></tracker:PickAClassControlPage>
        </GroupBox>
        <GroupBox Header="Quick Overall Winrate" >
            <tracker:GlobalStatsPage></tracker:GlobalStatsPage>
        </GroupBox>
        <GroupBox Header="Options" >
            <Button Content="Advanced Stats"></Button>
        </GroupBox>
    </StackPanel>

</UserControl>
