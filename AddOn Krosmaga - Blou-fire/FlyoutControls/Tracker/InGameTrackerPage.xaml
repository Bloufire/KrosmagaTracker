<UserControl x:Class="AddOn_Krosmaga___Blou_fire.FlyoutControls.Tracker.InGameTrackerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddOn_Krosmaga___Blou_fire.FlyoutControls.Tracker"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <GroupBox Header="Vs Profile">
                <local:VsProfileDataPage></local:VsProfileDataPage>
            </GroupBox>
            <GroupBox Header="Vs Cards">
                <local:VsTrackedCardsPage></local:VsTrackedCardsPage>
            </GroupBox>
        </StackPanel >
        <StackPanel Grid.Column="1">
            <GroupBox Header="Own Profile">
                <local:ProfileDataPage></local:ProfileDataPage>
            </GroupBox>
            <GroupBox Header="Own Cards left">
                <!--Mes Cartes Restantes-->
            </GroupBox>
        </StackPanel>


    </Grid>

</UserControl>
