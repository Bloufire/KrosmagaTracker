<UserControl x:Class="AddOn_Krosmaga___Blou_fire.FlyoutControls.Tracker.GlobalStatsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddOn_Krosmaga___Blou_fire.FlyoutControls.Tracker"
               xmlns:metroChart="clr-namespace:De.TorstenMandelkow.MetroChart;assembly=De.TorstenMandelkow.MetroChart"
             xmlns:pageModel="clr-namespace:AddOn_Krosmaga___Blou_fire.FlyoutControls.Tracker.PageModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <pageModel:GlobalStatsPageModel/>
    </UserControl.DataContext>

    <metroChart:RadialGaugeChart  Background="Transparent" ChartTitleVisibility="Visible" ChartTitle="{Binding TitreDuChart}" ChartSubTitle="{Binding SsTitreDuChart}" SelectedBrush="Transparent" ChartLegendVisibility="Collapsed" DockPanel.Dock="Left"  >
        <metroChart:RadialGaugeChart.Series>
            <metroChart:ChartSeries SeriesTitle="Winrate Total" DisplayMember="Name" ValueMember="Value" ItemsSource="{Binding WinrateOverall}"/>

        </metroChart:RadialGaugeChart.Series>
    </metroChart:RadialGaugeChart>
</UserControl>
