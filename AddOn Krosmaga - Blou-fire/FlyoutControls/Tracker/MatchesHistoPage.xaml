             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AddOn_Krosmaga___Blou_fire.FlyoutControls.Tracker"
             xmlns:pageModel="clr-namespace:AddOn_Krosmaga___Blou_fire.FlyoutControls.Tracker.PageModel"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:converter="clr-namespace:AddOn_Krosmaga___Blou_fire.Converter"
             xmlns:materialIcons="clr-namespace:MaterialIcons;assembly=MaterialIcons"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" Background="Transparent"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <pageModel:MatchesHistoPageModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <converter:GameResultToBrushConverter x:Key="GameResultToBrushConverter" />
        <converter:GameResultToStringConverter x:Key="GameResultToStringConverter" />
        <converter:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
    </UserControl.Resources>
    <DataGrid Name="DataGridGames" ItemsSource="{Binding FilteredGames}"
              ColumnHeaderStyle="{StaticResource CenterHeaderColumStyle}"
              AutoGenerateColumns="False" CanUserAddRows="False"
              CanUserDeleteRows="False" CanUserResizeRows="False"
              IsReadOnly="True" CanUserResizeColumns="True" VerticalScrollBarVisibility="Hidden"
              Background="Transparent" ScrollViewer.CanContentScroll="False"
            
             >
