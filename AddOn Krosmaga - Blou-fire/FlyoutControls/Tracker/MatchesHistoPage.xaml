        <DataGrid.Columns>
            <DataGridTemplateColumn Header="Class" SortMemberPath="PlayerClassName" Width="auto">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Image Source="{Binding OwnImage}" Width="30" Height="30"
                               RenderOptions.BitmapScalingMode="Fant" ToolTip="{Binding PlayerClassName}" />
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTemplateColumn Header="VS" Width="40" SortMemberPath="OppenentClassName">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Image Source="{Binding OpponentImage}" Width="30" Height="30"
                               RenderOptions.BitmapScalingMode="Fant" ToolTip="{Binding OppenentClassName}" />
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTextColumn Binding="{Binding OpponentName}" Width="125">
                <DataGridTextColumn.Header>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Name   " />
                        <TextBlock Text=" W" Foreground="LawnGreen" />
                        <TextBlock Text=" - " />
                        <TextBlock Text=" L " Foreground="Red" />

                    </StackPanel>
                </DataGridTextColumn.Header>
                <DataGridTextColumn.ElementStyle>
                    <Style TargetType="TextBlock">

                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="TextWrapping" Value="NoWrap" />
                        <Setter Property="FontWeight" Value="DemiBold" />
                        <Setter Property="Foreground"
                                Value="{Binding ResultatMatch ,Converter={StaticResource GameResultToBrushConverter}}" />
                    </Style>
                </DataGridTextColumn.ElementStyle>
            </DataGridTextColumn>

        </DataGrid.Columns>
        <DataGrid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="ShowDeck" Click="MenuItem_OnClick" >
                    <MenuItem.Icon>
                        <Image Width="12" Height="12" Source="../../Images/card.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </DataGrid.ContextMenu>

    </DataGrid>

</UserControl>

