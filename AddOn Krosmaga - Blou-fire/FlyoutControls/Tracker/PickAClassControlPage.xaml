<UserControl x:Class="AddOn_Krosmaga___Blou_fire.FlyoutControls.Tracker.PickAClassControlPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AddOn_Krosmaga___Blou_fire.FlyoutControls.Tracker"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:pageModel="clr-namespace:AddOn_Krosmaga___Blou_fire.FlyoutControls.Tracker.PageModel"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <pageModel:PickAClassControlPageModel />
    </UserControl.DataContext>
    <StackPanel >
  

        <ComboBox Name="ComboBoxClasseframe" SelectedItem="{Binding SelectedItemClasse}"
                  Margin="5"
                  ItemsSource="{Binding ComboClasseValues}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        
                        <Image Source="{Binding ImageUri}" Width="{StaticResource IconDefaultSize}" Height="{StaticResource IconDefaultSize}" VerticalAlignment="Center" Margin="3"/>
                        <TextBlock Text="{Binding NameClass}" VerticalAlignment="Center" FontSize="14" Margin="3" />
                        
                     </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding ComboBoxClasseOnSelectionChanged}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ComboBox>

    </StackPanel>
</UserControl>